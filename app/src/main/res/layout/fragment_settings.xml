<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Admin.Activity.Fragment.SettingsFragment">

    <!-- Chỗ này để thêm các thành phần giao diện khác trong Fragment nếu cần -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ng_xu_t"
        android:text="@string/trang_ch"
        tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck" />
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Xuất"
        android:contentDescription="@string/ng_xu_t"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

</LinearLayout>
